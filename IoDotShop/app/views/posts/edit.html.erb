<!DOCTYPE html>
<html>

  <%= stylesheet_link_tag "https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css"%>

  <div class="container">
    <header class="justify-content-center py-0 mb-0 border">
      <div class="container">
        <header class=" d-flex flex-wrap justify-content-center py-0 mb-2 border-bottom">
          <h2>Edit post<h2>
        </header>
      </div>

      <%= form_for :post, url: post_path(@post), method: :patch do |f|%>
        <div class="container">
          <header class=" d-flex flex-wrap justify-content-center py-3 mb-0">
            <p>
              <div class="container">
                <header class=" d-flex flex-wrap justify-content-center py-0 mb-0">
                  <h3>Title<h3>
                </header>
              </div>
              <%= f.text_field(:title, {:class => "form-control"}) %>
            </p>
          </header>
        </div>

        <div class="container">
          <header class=" d-flex flex-wrap justify-content-center py-3 mb-0">
            <p>
              <div class="container">
                <header class=" d-flex flex-wrap justify-content-center py-0 mb-0">
                  <h3>Description<h3>
                </header>
              </div>
              <%= f.text_area(:description, {:class => "form-control"}) %>
            </p>
          </header>
        </div>

        <div class="container">
          <header class=" d-flex flex-wrap justify-content-center py-3 mb-0">
            <p>
              <div class="container">
                <header class=" d-flex flex-wrap justify-content-center py-0 mb-0">
                  <h3>Text<h3>
                </header>
              </div>
              <%= f.text_area(:body, {:class => "form-control"}) %>
            </p>
          </header>
        </div>

        <div class="container">
          <header class=" d-flex flex-wrap justify-content-center py-2 mb-0">
            <p>
              <h3><%= f.submit({:class => "btn btn-success btn-lg"}) %></h3>
            </p>
          </header>
        </div>

      <% end %>
    </header>
  </div>
</html>